<?xml version="1.0" encoding="UTF-8"?>

<web-app id="pl8s" version="1.0">

	<display-name>PL8S</display-name>

	<description>Webapp for placing orders to festival restaurants.</description>

	<welcome-file-list>
		<welcome-file>/jsp/restaurant/restaurants-search.jsp</welcome-file>	
	</welcome-file-list>

	<servlet>
		<servlet-name>RestManagerServlet</servlet-name>
		<servlet-class>it.unipd.dei.webapp.wa001.servlet.RestDispatcherServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>RestManagerServlet</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SelectDish</servlet-name>
		<servlet-class>it.unipd.dei.webapp.wa001.servlet.dish.SelectDishServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SelectDish</servlet-name>
		<url-pattern>/dish/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SelectDish</servlet-name>
		<url-pattern>/dish/*/edit</url-pattern>
	</servlet-mapping>

	<resource-ref>
		<description>Connection pool to the database</description>
		<res-ref-name>jdbc/pl8s</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<!-- Protecting resources -->

	<filter>
		<filter-name>AdminResourceFilter</filter-name>
		<filter-class>it.unipd.dei.webapp.wa001.filter.AdminResourceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>AdminResourceFilter</filter-name>
		<url-pattern>/rest/user/delete/*</url-pattern>
		<url-pattern>/rest/user/create</url-pattern>
		<url-pattern>/rest/user/list</url-pattern>
		<url-pattern>/rest/user/email/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>UserResourceFilter</filter-name>
		<filter-class>it.unipd.dei.webapp.wa001.filter.UserResourceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>UserResourceFilter</filter-name>
		<url-pattern>/rest/user </url-pattern>
		<url-pattern>/rest/user/logout</url-pattern>
		<url-pattern>/rest/user/cards</url-pattern>
		<url-pattern>/rest/order</url-pattern>
		<url-pattern>/rest/order/dishes</url-pattern>
		<url-pattern>/rest/order/previous</url-pattern>
		<url-pattern>/rest/order/dishes/*</url-pattern>
		<url-pattern>/rest/order/previous-orders/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>DishResourceFilter</filter-name>
		<filter-class>it.unipd.dei.webapp.wa001.filter.DishResourceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>DishResourceFilter</filter-name>
		<url-pattern>/rest/dish</url-pattern>
		<url-pattern>/rest/dish/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>ManagerResourceFilter</filter-name>
		<filter-class>it.unipd.dei.webapp.wa001.filter.ManagerResourceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>ManagerResourceFilter</filter-name>
		<url-pattern>/rest/restaurant/create</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>RestaurantResourceFilter</filter-name>
		<filter-class>it.unipd.dei.webapp.wa001.filter.RestaurantResourceFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>RestaurantResourceFilter</filter-name>
		<url-pattern>/rest/restaurant/update/*</url-pattern>
		<url-pattern>/rest/restaurant/delete/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>StripeResourceFilter</filter-name>
		<filter-class>it.unipd.dei.webapp.wa001.filter.StripeResourceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>StripeResourceFilter</filter-name>
		<url-pattern>/rest/order/payment</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>ListRestaurantManagerResourceFilter</filter-name>
		<filter-class>it.unipd.dei.webapp.wa001.filter.ListRestaurantManagerResourceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>ListRestaurantManagerResourceFilter</filter-name>
		<url-pattern>/rest/restaurants/manager</url-pattern>
	</filter-mapping>
	
	<!-- Web pages -->

	<servlet>
		<servlet-name>UserProfile</servlet-name>
		<jsp-file>/jsp/user/user.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>UserProfile</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserList</servlet-name>
		<jsp-file>/jsp/user/userlist.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>UserList</servlet-name>
		<url-pattern>/user/list</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UserCreateManager</servlet-name>
		<jsp-file>/jsp/user/createManager.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>UserCreateManager</servlet-name>
		<url-pattern>/user/create</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>RestaurantSearch</servlet-name>
		<jsp-file>/jsp/restaurant/restaurants-search.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>RestaurantSearch</servlet-name>
		<url-pattern>/restaurants</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>ListRestaurantsManager</servlet-name>
		<jsp-file>/jsp/restaurant/list-restaurants-manager.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>ListRestaurantsManager</servlet-name>
		<url-pattern>/restaurants/manager</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>DishSearch</servlet-name>
		<jsp-file>/jsp/dish/dish-search.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>DishSearch</servlet-name>
		<url-pattern>/dishes/restaurant/*</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>ListDishesManager</servlet-name>
		<jsp-file>/jsp/dish/list-dishes-manager.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>ListDishesManager</servlet-name>
		<url-pattern>/dishes/manager/restaurant/*</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>Cart</servlet-name>
		<jsp-file>/jsp/order/cart.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>Cart</servlet-name>
		<url-pattern>/order/cart</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>Checkout</servlet-name>
		<jsp-file>/jsp/order/checkout.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>Checkout</servlet-name>
		<url-pattern>/order/checkout</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>PreviousOrders</servlet-name>
		<jsp-file>/jsp/order/orders.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>PreviousOrders</servlet-name>
		<url-pattern>/order/list</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>Login</servlet-name>
		<jsp-file>/jsp/user/login.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/user/login</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>Register</servlet-name>
		<jsp-file>/jsp/user/register.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/user/register</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>DishAdd</servlet-name>
		<jsp-file>/jsp/dish/add-dish.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>DishAdd</servlet-name>
		<url-pattern>/dish/add/restaurant/*</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>AddRestaurant</servlet-name>
		<jsp-file>/jsp/restaurant/add-restaurant.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>AddRestaurant</servlet-name>
		<url-pattern>/restaurant/add</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>

	<servlet>
		<servlet-name>AdminRestaurantEdit</servlet-name>
		<jsp-file>/jsp/restaurant/edit-restaurant.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
	</servlet>

	<servlet-mapping>
		<servlet-name>AdminRestaurantEdit</servlet-name>
		<url-pattern>/restaurant/*</url-pattern> <!-- Any URL you want here -->
	</servlet-mapping>
	
</web-app>
